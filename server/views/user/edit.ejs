<%- include ../partials/header.ejs %> 
<%- include ../partials/main_nav.ejs %> 

<!-- Content for Edit -->
<div class="container">
    <div class="col-md-12">
        <div class="col-md-12">
            <h1><%= title %> </h1>
            <form class="form" method="POST">
                <div class="form-group mb-2">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control" id="nameTextField" 
                    placeholder="Enter Contact Name" name="name" 
                    value="<%= user.name %>"
                    required>
                </div>
                <div class="form-group mb-2">
                    <label for="numberTextField">Contact Number</label>
                    <input type="text" class="form-control" id="numberTextField" 
                    placeholder="Enter Contact Number" name="number" 
                    value="<%= user.contact %>"
                    required>
                </div>
                <div class="form-group mb-2">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control" id="emailTextField" 
                    placeholder="Enter Email" name="email"
                    value="<%= user.email %>"
                    required>
                </div>

                <button class="btn-primary btn mb-2" type="submit">
                    <i class="fas fa-edit"></i>Update
                </button>
                <a href="/user-list" class="btn btn-warning mb-2">
                    <i class="fas fa-undo"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %> 
<%- include ../partials/footer.ejs %> 